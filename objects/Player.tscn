resource_name = "Player"
script/source = "extends Node2D

var movable = false
var target_pos = Vector2()

var start = true
var died = false


func _ready() -> void:
	target_pos = global_position


func _input(event: InputEvent) -> void:
	if died:
		if event is InputEventMouseButton or \\
				event is InputEventScreenTouch:
			if event.pressed:
				get_tree().current_scene.restart_game()
	
	if event is InputEventMouseButton or \\
			event is InputEventScreenTouch:
		movable = event.pressed
		if start && event.pressed:
			get_tree().current_scene.start_game()
	
	if movable and \\
			event is InputEventMouseMotion or \\
			event is InputEventScreenDrag:
		target_pos += Vector2(event.relative.x, 0)
		target_pos.x = clamp(target_pos.x, 96, 1080-112)


func _process(delta: float) -> void:
	global_position = lerp(
		global_position, 
		target_pos, 
		delta * 10
	)
	var angle = (target_pos.x - global_position.x) / 4
	angle = clamp(angle, -90, 90)
	global_rotation_degrees = lerp(
		global_rotation_degrees, 
		angle, 
		delta * 16
	)

func die() -> void:
	get_tree().current_scene.end_game()
	set_process(false)
	died = true
"

